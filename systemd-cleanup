#!/bin/bash
user_stops=()

mapfile -t unitpaths
for unitpath in "${unitpaths[@]}"
do
    if [[ -d $unitpath || -L $unitpath || ! -f $unitpath ]]; then
        continue
    fi
    IFS='/' read -ra unitarray <<< "$unitpath"
    type=${unitarray[3]}
    unit=${unitarray[4]}
    case $type in
        system)
            /usr/bin/systemctl disable --now "$unit"
            ;;
        user)
            /usr/bin/systemctl --global disable "$unit"
            user_stops+=("${unit/@/@*}")
            ;;
    esac
done

if (( ${#user_stops[@]} )); then
    printf "==> Use \`systemctl --user stop %s' to stop all remaining units in user manager\n" "${user_stops[*]}"
fi

# vim: set ft=sh ts=4 sw=4 et:
