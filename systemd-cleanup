#!/bin/bash
user_stops=()

mapfile -t unitpaths
for unitpath in "${unitpaths[@]}"
do
    if [[ -d $unitpath || -L $unitpath || ! -f $unitpath ]]; then
        continue
    fi
    IFS='/' read -ra unitarray <<< "$unitpath"
    type=${unitarray[3]}
    unit=${unitarray[4]}
    case $type in
        system)
            /usr/bin/systemctl disable --no-reload "$unit"
            /usr/bin/systemctl stop "${unit/@/@*}"
            ;;
        user)
            /usr/bin/systemctl --global disable "$unit"
            user_stops+=("$unit")
            ;;
    esac
done

if (( ${#user_stops[@]} )); then
    printf "User units to be stopped manually with \`systemctl --user':\n%s\n" "${user_stops[@]}"
fi

# vim: set ft=sh ts=4 sw=4 et:
