#!/bin/bash
revert=0
user_stops=()

if [[ "$1" == "--revert" ]]; then
    revert=1
fi

mapfile -t unitpaths
for unitpath in "${unitpaths[@]}"
do
    IFS='/' read -ra unitarray <<< "$unitpath"

    # If the path leads to a drop-in file, a dir or a symlink, we skip it
    # Example of a valid entry: usr/lib/systemd/system/user@.service
    if (( ${#unitarray[@]} > 5 )) || [[ ! -f $unitpath || -L $unitpath ]]; then
        continue
    fi

    type=${unitarray[3]}
    unit=${unitarray[4]}

    case $type in
        system)
            if (( revert )); then
                /usr/bin/systemctl revert "$unit"
            fi

            /usr/bin/systemctl disable --no-reload --no-warn "$unit"
            /usr/bin/systemctl stop "${unit/@/@*}"
            ;;
        user)
            if (( revert )); then
                /usr/bin/systemctl --global revert "$unit"
            fi

            /usr/bin/systemctl --global disable --no-warn "$unit"
            user_stops+=("'${unit/@/@*}'")
            ;;
    esac
done

if (( ${#user_stops[@]} )); then
    printf "==> %s user unit(s) being removed\n" "${#user_stops[@]}"
    printf "  -> To stop them in current user manager, run \"systemctl --user stop %s\"" "${user_stops[*]}"
fi

# vim: set ft=sh ts=4 sw=4 et:
